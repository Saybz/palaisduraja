generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Content {
  id          Int     @id @default(autoincrement())
  banner      String?
  title       String?
  histoire    String?
  histoireImg String?
  menuDesc    String?
  menuImg     String?
  menuPdf     String?

  cuisine       String?
  paiement      String?
  horaire1      String?
  horaire1state String?
  horaire2      String?
  horaire2state String?

  mail String?
  tel  String?
}
