generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Content {
  id          Int       @id @default(autoincrement())
  banner      String?
  
  // Champs traduisibles - Français (par défaut)
  title       String?
  histoire    String?
  menuDesc    String?
  cuisine     String?
  paiement    String?
  
  // Champs traduisibles - Anglais
  titleEn     String?
  histoireEn  String?
  menuDescEn  String?
  cuisineEn   String?
  paiementEn  String?
  
  // Images et fichiers (non traduisibles)
  histoireImg String?
  menuImg     String?
  menuImg1    String?
  menuImg2    String?
  menuImg3    String?
  menuImg4    String?
  menuPdf     String?

  mail        String?
  tel         String?

  // Relation avec les horaires
  schedules   Schedule[]
}

model Schedule {
  id        Int      @id @default(autoincrement())
  day       WeekDay  // Enum -> jour de la semaine
  period    Period   // midi ou soir
  openTime  String?  // Exemple "12:00"
  closeTime String?  // Exemple "14:30"
  isClosed  Boolean  @default(false)

  contentId Int
  content   Content  @relation(fields: [contentId], references: [id])
}

model Dish {
  id          Int      @id @default(autoincrement())
  
  // Champs traduisibles - Français (par défaut)
  name        String
  description String
  
  // Champs traduisibles - Anglais
  nameEn      String?
  descriptionEn String?
  
  price       String   // Format: "12.00 €"
  image       String?
  order       Int      @default(0) // Pour ordonner les plats
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum WeekDay {
  LUNDI
  MARDI
  MERCREDI
  JEUDI
  VENDREDI
  SAMEDI
  DIMANCHE
}

enum Period {
  MIDI
  SOIR
}
